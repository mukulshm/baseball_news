<div class="page-header">
  <h1>
    Major League Baseball Teams
    <a href="/logos/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Logos (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @teams.each do |team| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <dl>
          <!-- <dt>Path</dt> -->
          <dd><img src="<%= team.Logos.path %>"></dd>
        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/logos/<%= team.Logos.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
