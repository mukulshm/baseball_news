<!-- Validation failure messages -->

<% if @path.errors.any? %>
  <% @path.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Path</h3>
      </div>
      <div class="panel-body">
        <form action="/create_path" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for path -->
          <div class="form-group">
            <label for="path" class="col-sm-2 control-label">
              Path
            </label>
            <div class="col-sm-10">
              <input type="text" id="path" name="path" placeholder="Path" class="form-control" value="<%= @path.path %>">
            </div>
          </div>

          <!-- Label and input for platform_id -->
          <div class="form-group">
            <label for="platform_id" class="col-sm-2 control-label">
              Platform
            </label>
            <div class="col-sm-10">
              <!-- <input type="text" id="platform_id" name="platform_id" placeholder="Platform" class="form-control" value="<%= @path.platform_id %>"> -->
              <%= select_tag(:platform_id, options_from_collection_for_select(Platform.all, :id, :name, @path.platform_id), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for team_id -->
          <div class="form-group">
            <label for="team_id" class="col-sm-2 control-label">
              Team
            </label>
            <div class="col-sm-10">
              <!-- <input type="text" id="team_id" name="team_id" placeholder="Team" class="form-control" value="<%= @path.team_id %>"> -->
              <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :name, @path.team_id), :class => "form-control") %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Path
              </button>
              or
              <a href="/paths">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
